{
  "name": "jwt_auth_node_typeorm",
  "version": "1.0.0",
  "main": "app.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
    "build": "tsc -p .",
    "typeorm": "typeorm-ts-node-commonjs",
    "migrate:create": "npm run build && npm run typeorm -- migration:create ./src/migrations/new-entry-entity",
    "migrate": "npm run build && npm run typeorm -- migration:generate ./src/migrations/new-entry-entity -d ./src/utils/data-source.ts ",
    "db:push": "npm run build && npm run typeorm -- migration:run -d ./src/utils/data-source.ts"
  },
  "dependencies": {
    "@types/passport": "^1.0.16",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.1",
    "config": "^3.3.7",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "express-session": "^1.18.0",
    "html-to-text": "^9.0.5",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.9",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.4.0",
    "pug": "^3.0.2",
    "redis": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.33.2",
    "twilio": "^5.0.1",
    "typeorm": "^0.3.20",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^0.0.41",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.18.0",
    "@types/html-to-text": "^9.0.4",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.11",
    "@types/node": "^16.11.10",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/pug": "^2.0.10",
    "@types/sharp": "^0.32.0",
    "morgan": "^1.10.0",
    "prisma": "^5.9.1",
    "ts-node": "10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "4.5.2"
  }
}
